<h3>Listado de Servicios</h3>
<ol class="breadcrumb">
  <li>
    <%= link_to 'Inicio', root_path %>
  </li>
  <li>
    Servicios
  </li>
  <li>
    <strong><%= link_to 'AÃ±adir Servicio', new_product_path %></strong>
  </li>

  <span class="glyphicon glyphicon-download-alt pull-right" aria-hidden="true"> <%= link_to 'Excel', new_client_path %></span>

</ol>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Mb subida</th>
      <th>Mb bajada</th>
      <th>Costo</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.nombre %></td>
        <td><%= product.descripcion %></td>
        <td><%= product.mb_subida %></td>
        <td><%= product.mb_bajada %></td>
        <td><%= product.costo %></td>
        <td><%= product.status.status %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

