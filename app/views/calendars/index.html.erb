<h3>Calendarios</h3>
<ol class="breadcrumb">
  <li>
    <%= link_to 'Inicio', root_path %>
  </li>
  <li>
    Calendarios
  </li>
  <li>
    <strong><%= link_to 'AÃ±adir Calendario', new_calendar_path %></strong>
  </li>

  <span class="glyphicon glyphicon-download-alt pull-right" aria-hidden="true"> <%= link_to 'Excel', new_client_path %></span>

</ol>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Calendario</th>
      <th>Fecha corte</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
    <%status = calendar.status_id
      case status
      when 8%>
        <tr class="success">
      <%when 9%>
        <tr class="danger">
    <%end%>
        <td><%= calendar.calendario %></td>
        <td><%unless calendar.fecha_corte.nil?%>
              <%= (calendar.fecha_corte + 6.days).strftime("%d-%m-%Y") %>
            <%else%>
              <%= calendar.fecha_corte%>
            <%end%>
        </td>
        <td><%= calendar.status.status %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
