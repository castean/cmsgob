<h3>Listado de IPs</h3>
<ol class="breadcrumb">
  <li>
    <%= link_to 'Inicio', root_path %>
  </li>
  <li>
    Direcciones de IP
  </li>
  <li>
    <strong><%= link_to 'Añadir IP', new_ip_address_path %></strong>
  </li>
</ol>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Dirección Ip</th>
      <th>Sectorial</th>
      <th>Estatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ip_addresses.each do |ip_address| %>
      <tr>
        <td><%= ip_address.ip_address %></td>
        <td><%= ip_address.sectorial.nombre %></td>
        <td><%= ip_address.status.status %></td>
        <td><%= link_to 'Show', ip_address %></td>
        <td><%= link_to 'Edit', edit_ip_address_path(ip_address) %></td>
        <td><%= link_to 'Destroy', ip_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
